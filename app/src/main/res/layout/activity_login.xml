<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="100">


        <!-- Logo Start-->
        <ImageView android:src="@drawable/masterdl"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            />
        <!-- Logo Ends -->
    <!-- Logo Start-->

    <!-- Logo Ends -->



    <TextView
        android:id="@+id/biosharelabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:text="@string/bio_share"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/usernamelabel"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/biosharelabel"
        android:layout_marginTop="50dp"
        android:text="@string/username"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/usernametext"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_alignBottom="@+id/usernamelabel"
        android:layout_marginLeft="32dip"
        android:layout_toRightOf="@+id/usernamelabel"
        android:ems="10"
        android:inputType="text">
        <requestFocus />
    </EditText>




    <Button
        android:id="@+id/loginbutton"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/auth"
        android:background="@drawable/mybutton"
        android:layout_gravity="center"
        android:onClick="login"
        android:text="@string/Login"
        android:layout_marginTop="50dp"/>

</LinearLayout>